<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whatsapp_image_2020_08_15_at_22_39_30"
    tools:context=".MainActivity">

    <!-- sign in-->

    <Button
        android:id="@+id/btn_register"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="244dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="11dp"
        android:background="#FFFFFF"
        android:text="משתמש חדש - הירשם"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btn_login"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="249dp"
        android:layout_height="119dp"
        android:layout_above="@+id/btn_register"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:background="#FFFFFF"
        android:text="משתמש קיים - התחבר"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textview_wehere"
        android:layout_width="281dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="615dp"
        android:fontFamily="serif"
        android:maxHeight="200dp"
        android:text="WeHere"
        android:textColor="#000000"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/textview_welcome"
        android:layout_width="245dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="554dp"
        android:fontFamily="sans-serif-thin"
        android:text="ברוכים הבאים"
        android:textColor="#0B0404"
        android:textSize="40dp" />

</RelativeLayout>