<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95FFFFFF"
    tools:context=".WaitforRequest">

    <TextView
        android:id="@+id/textView_waitforreq"
        android:layout_width="305dp"
        android:layout_height="74dp"
        android:background="#00F6EBEB"
        android:backgroundTint="#A57878"
        android:drawableTint="#050202"
        android:text="בקשתך נרשמה"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/btn_reqchange"
        android:layout_width="180dp"
        android:layout_height="143dp"
        android:background="#BF86DF89"
        android:clickable="true"
        android:contextClickable="true"
        android:onClick="onClick"
        android:text="לשינוי הבקשה לחץ כאן"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_waitforreq"
        app:layout_constraintVertical_bias="0.961" />

    <TextView
        android:id="@+id/textView_explain"
        android:layout_width="181dp"
        android:layout_height="448dp"
        android:text="במידה וימצא מתנדב שיכול לעזור לך, תישלח אליך הודעת SMS עם הפרטים שלו!"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381" />

    <Button
        android:id="@+id/btn_editwait"
        android:layout_width="192dp"
        android:layout_height="146dp"
        android:background="#8D00BCD4"
        android:clickable="true"
        android:contextClickable="true"
        android:onClick="onClick"
        android:text="לעריכת הפרופיל"
        android:textColor="#040000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="212dp"
        android:layout_height="538dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217"
        app:srcCompat="@drawable/wait_for_request" />

</androidx.constraintlayout.widget.ConstraintLayout>